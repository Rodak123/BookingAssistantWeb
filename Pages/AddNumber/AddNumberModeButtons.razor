@page "/add-number/{PhoneId:int}"
@inject NavigationManager Navigation

<PageTitle>Config Buttons</PageTitle>

<h3>Configurace</h3>

<p>Zadané číslo: @PhoneId</p>

<button class="btn btn-primary" @onclick='NavigateWithParam'>Rezervační Systém</button>
<button class="btn btn-secondary" disabled>Objednávací Systém</button>

@code {
    [Parameter]
    public int? PhoneId { get; set; }
    public int? ModeConfigId { get; set; } = 0;
    private void NavigateWithParam()
    {
        Navigation.NavigateTo($"/add-number/{PhoneId}/{ModeConfigId}");
    }
}