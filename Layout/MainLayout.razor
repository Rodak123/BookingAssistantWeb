@inherits LayoutComponentBase
@inject IJSRuntime JS
@inject TokenService TokenService

@code {
    private DotNetObjectReference<MainLayout>? DotNetRef;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            DotNetRef = DotNetObjectReference.Create(this);
            // Call JS function to refresh access token using refresh token cookie
            await JS.InvokeAsync<string>("refreshAccessToken", DotNetRef);
        }
    }

    [JSInvokable]
    public void SetJwtToken(string token)
    {
        TokenService.AccessToken = token;
        StateHasChanged();
    }

    [JSInvokable]
    public void ClearJwtToken()
    {
        TokenService.Clear();
        StateHasChanged();
    }

    public void Dispose()
    {
        DotNetRef?.Dispose();
    }
}

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>