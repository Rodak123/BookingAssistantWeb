<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BookingAssistantWeb</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="home" Match="NavLinkMatch.All">
                <span class="bi home-nav-menu" aria-hidden="true"></span> Moje čísla
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="calendar" Match="NavLinkMatch.All">
                <span class="bi calendar-nav-menu" aria-hidden="true"></span> Kalendář
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="conversations" Match="NavLinkMatch.All">
                <span class="bi conversations-nav-menu" aria-hidden="true"></span> Konverzace
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}